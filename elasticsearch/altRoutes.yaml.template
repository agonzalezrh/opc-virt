---
kind: Route
apiVersion: route.openshift.io/v1
metadata:
  name: elasticsearch
  namespace: {{ namespace }}
spec:
  host: elasticsearch.{{ altDomain }}
  to:
    kind: Service
    name: es-master-svc
  port:
    targetPort: elasticsearch
  tls:
    termination: edge
    insecureEdgeTerminationPolicy: Redirect
  wildcardPolicy: None
